{
  "manifest_version": 3,
  "name": "Truth-ify",
  "version": "0.1.0a",
  "description": "A tool to help identify potential misinformation online.",
  "action": {
      "default_popup": "popup.html"
  },
  "permissions": [
      "activeTab",
      "storage"
  ],
  "background": {
      "service_worker": "background.js"
  }
}